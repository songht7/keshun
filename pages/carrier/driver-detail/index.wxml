<!--pages/carrier/driver-detail/index.wxml-->
<view class="container">
	<mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
	<view class="form-box">
		<form catchsubmit="formSubmit" catchreset="formReset">
			<view class="form-row">
				<view class="f-row-label">驾驶员编号</view>
				<view class="f-row-val"><input class="form-row-input" data-name="NO" bindinput="bindInput" value="{{datas.NO}}" /></view>
			</view>
			<view class="form-row">
				<view class="f-row-label">驾驶员姓名</view>
				<view class="f-row-val"><input class="form-row-input" data-name="name" bindinput="bindInput" value="{{datas.name}}" /></view>
			</view>
			<view class="form-row">
				<view class="f-row-label">驾驶员性别</view>
				<view class="f-row-val">
					<!-- <input class="form-row-input" value="{{data.gender}}" /> -->
					<view class="gender">
						<view class="gender-btn {{datas.gender==1?'on':''}}" data-val="1" bindtap="selectGender">男</view>
						<view class="gender-btn {{datas.gender==2?'on':''}}" data-val="2" bindtap="selectGender">女</view>
					</view>
				</view>
			</view>
			<view class="form-row">
				<view class="f-row-label">驾驶员联系电话</view>
				<view class="f-row-val"><input class="form-row-input" data-name="phone" bindinput="bindInput" value="{{datas.phone}}" /></view>
			</view>
			<view class="form-row">
				<view class="f-row-label">驾驶员所属运输公司</view>
				<view class="f-row-val"><input class="form-row-input" data-name="logistics" bindinput="bindInput" value="{{datas.logistics}}" /></view>
			</view>
			<view class="form-row">
				<view class="f-row-label">驾驶员身份证</view>
				<view class="f-row-val"><input class="form-row-input" data-name="idCard" bindinput="bindInput" value="{{datas.idCard}}" /></view>
			</view>
			<view class="form-row">
				<view class="f-row-label">从业资格证编号</view>
				<view class="f-row-val"><input class="form-row-input" data-name="empNO" bindinput="bindInput" value="{{datas.empNO}}" /></view>
			</view>
			<view class="form-row">
				<view class="f-row-label">驾驶员驾驶证档案号</view>
				<view class="f-row-val"><input class="form-row-input" data-name="driverLicense" bindinput="bindInput" value="{{datas.driverLicense}}" /></view>
			</view>
			<view class="page-init">
				<view class="btn-area">
					<button type="primary" class="btn-primary" formType="submit">确定</button>
					<!-- <button formType="reset">Reset</button> -->
				</view>
			</view>
		</form>
	</view>
</view>