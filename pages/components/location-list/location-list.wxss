/* pages/components/location-list/location-list.wxss */
@import "/common/base.wxss";

.status-list {
  margin: 20rpx 0;
  padding: 20rpx;
}

.status-row {
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  padding: 20rpx 0;
  border-bottom: 1px dashed #a1a1a1;
}

.status-row:last-child {
  border-bottom: none
}
.status-block{
  width: 100%;
}
.status-block-row {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: flex-start;
  align-content: center;
  padding-bottom: 20rpx;
  font-size: 26rpx;
}

.status-block-row .icons {
  height: 36rpx;
  width: 34rpx;
  padding-top: 5rpx;
}

.submitStatus {
  width: 30%;
  margin-left: 20rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
  position: relative;
}

.submitStatus::before {
  position: absolute;
  left: 0;
  content: "";
  width: 2rpx;
  height: inherit;
  background-image: radial-gradient(#bababa, #FFF);
}