/* pages/components/picker-search/picker-search.wxss */
.picker-show {
  display: block;
}

.picker-hidden {
  display: none;
}

.picker-search {
  position: fixed;
  z-index: 5;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.picker-search-bg {
  background: rgba(0, 0, 0, .5);
  position: fixed;
  width: inherit;
  height: inherit;
  z-index: 5;
}

.picker-search-main {
  background: #fff;
  width: 100%;
  min-height: 300rpx;
  border-radius: 15rpx 15rpx 0 0;
  overflow: hidden;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
}

.picker-search-cont {
  padding: 20rpx 0;
}

.picker-search-title {
  color: #000;
  line-height: 2;
  font-size: 34rpx;
  padding: 20rpx 30rpx;
}

.picker-search-input {
  position: relative;
  padding: 20rpx;
  background: #eee;
}

.search-input {
  padding-left: 50rpx;
}

.search-icon {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.picker-search-list {
  padding: 20rpx 30rpx;
}

.scroll-view-item {
  color: #666;
  margin: 20rpx 0;
}