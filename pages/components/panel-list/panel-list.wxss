/* pages/components/panel-list/panel-list.wxss */

@import "../../../common/base.wxss";

.searchbar {
  background: #fff;
  position: relative;
  padding: 20rpx 30rpx;
}

.search-input {
  padding-left: 50rpx;
}

.search-icon {
  position: absolute;
  top: 20rpx;
  left: 30rpx;
  width: 40rpx;
  height: 40rpx;
}

.panel-row {
  background: #fff;
  width: 100%;
  margin: 10rpx 0;
}

.panel-block {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  align-items: center;
}

.panel-right {
  height: 100%;
  min-height: 80rpx;
  width: 10%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  align-content: center;
}

.panel-arrow {
  border: 1px solid #211815;
  border-width: 1px 1px 0 0;
  transform: rotate(45deg);
  width: 25rpx;
  height: 25rpx;
}