<!--pages/sign/sign.wxml-->
<view class="container">
	<mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
	<view class="page-init" wx:if="{{!checkUser}}">
		<form catchsubmit="formSubmit" catchreset="formReset">
			<view class="cks-input-row {{inputFocus=='phone'?'on':''}}">
				<input class="cks-input" type="number" name="phone" data-type="phone" bindfocus="onFocus" bindblur="onBlur" placeholder="请输入手机号" />
			</view>
			<view class="cks-input-row {{inputFocus=='code'?'on':''}}">
				<input class="cks-input" type="text" name="code" data-type="code" bindfocus="onFocus" bindblur="onBlur" placeholder="短信验证码" />
			</view>
			<view class="btn-area">
				<button type="primary" class="btn-primary" formType="submit">注册</button>
				<!-- <button formType="reset">Reset</button> -->
			</view>
		</form>
	</view>
</view>