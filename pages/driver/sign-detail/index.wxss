/* pages/driver/sign/index.wxss */
@import "/common/base.wxss";

.sign-box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: 20rpx 0;
}

.sign-status {
  position: relative;
  width: 300rpx;
  height: 300rpx;
}

.sign-loading,
.sign-bg,
.sing-label {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
}

@keyframes rotate {
  from {
    transform: rotate(0deg)
  }

  to {
    transform: rotate(359deg)
  }
}

.animate__rotate {
  animation: rotate 3s linear infinite;
}

.sign-bg {
  top: 7.5%;
  left: 8.5%;
  z-index: 2;
  width: 85%;
  height: 85%;
}

.sing-label {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  align-content: center;
  z-index: 3;
  color: #fff;
  font-size: 38rpx;
}

.sign-info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  align-items: center;
}

.sign-qr-box {
  position: relative;
  padding: 20rpx 0;
  width: 100%;
  height: 750rpx;
}

.qr-bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
  width: 100%;
  height: 100%;
}

.sign-qr-main {
  position: relative;
  z-index: 1;
  padding: 10rpx 60rpx;
}

.wait {
  font-size: 28rpx;
  text-align: center;
  line-height: 1.4;
}

.wait-numb {
  color: #225597;
}

.sing-NO {
  font-size: 34rpx;
}

.wait-red {
  color: #f40;
}

.wait-green {
  color: rgb(1, 146, 13);
}

.qr-code {
  padding: 40rpx 0;
  height: 550rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  align-items: center;
}

.qr-canvas {
  width: 100%;
  height: 100%;
  margin-bottom: 10rpx;
}