/* pages/driver/customer-sign/index.wxss */
@import "../../../common/base.wxss";

page {
  background-color: #f3f3f3
}

.cust-block {
  margin: 40rpx 0 0;
  background: #fff;
  width: 92%;
  padding: 4%;
}

.code-box {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-content: center;
  align-items: center;
}

.code-inut {
  flex: 1;
  line-height: 2;
  padding: 5rpx;
}

.update-title {
  padding: 0 0 20rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.upload-btn{
  color: #999;
}
.order-pic {
  width: 100%;
  height: 400rpx;
  position: relative;
}

.delete {
  position: absolute;
  z-index: 1;
  background: rgba(0, 0, 0, 0.5);
  color: #eee;
  line-height: 2;
  width: 90%;
  padding: 0 5%;
  text-align: right;
}