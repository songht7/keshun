<!--pages/driver/customer-sign/index.wxml-->
<view class="container">
	<scan-code bind:seachCode="onSubmit">
		<view slot="cont">
			<view class="cust-block">
				<view class="code-box">
					<input class="code-inut" name="receivingCode" model:value="{{receivingCode}}" placeholder="请输入收货码"></input>
				</view>
			</view>
			<view class="cust-block">
				<view class="update">
					<view class="update-title">交货单照片</view>
					<view class="update-img">
						<view class="weui-uploader__bd">
							<view class="weui-uploader__files">
								<block wx:for="{{imageList}}" wx:for-item="image" wx:key="key">
									<view class="weui-uploader__file order-pic" hover-class="pic-hover">
										<view class="delete" bindtap="delImage" data-key="{{key}}">[删除]</view>
										<image wx:if="{{image}}" class="weui-uploader__img" src="{{image}}" data-src="{{image}}" bindtap="previewImage"></image>
									</view>
								</block>
								<block wx:if="{{imageList.length<=0}}">
									<view class="weui-uploader__file order-pic">
										<image class="weui-uploader__img" src="/static/default.jpg" bindtap="chooseImage"></image>
									</view>
								</block>
							</view>
							<!-- <view class="weui-uploader__input-box">
								<view class="weui-uploader__input" bindtap="chooseImage"></view>
							</view> -->
						</view>
					</view>
				</view>
			</view>
		</view>
	</scan-code>
</view>